<h2>Your acebook feed</h2>

<div id="newpost">
<%= link_to new_post_path do %> <h3>new post</h3> <% end %>
</div>

<div id="posts">
  <% @posts.each do |post| %>
    <div id="post">
      <h3><%= simple_format(post.message) %></h3>
      <p>by <span id="email"><%= post.user.email%></span> at <%= post.created_at.strftime("%B %d %Y, %l:%M%P") %></p>
      <p><span id="minibtns"><%= link_to "Edit this post", edit_post_path(post) %></span>
      <span id="minibtns"><%= link_to "Delete this post", post_path(post), method: :delete, data: {confirm: 'Are you sure?'}%></span>
      <span id="minibtns"><%= link_to "Add comment", new_comment_path(post) %></span></p>
</div>
  
    <div id="comments">
      <h2>comments</h2>
      <% @comments.each do |comment| %>
        <div id="comment">
          <% if comment.post_id == post.id %>
            <h4><%= simple_format(comment.content) %></h4>
            <p>by <span id="email"><%= comment.user.email %></span> at <%= comment.created_at.strftime("%B %d %Y, %l:%M%P")%></p>
            <p><span id="minibtns"><%= link_to "Delete", comment_path(comment), method: :delete, data: {confirm: 'Are you sure?'} %></span></p>
          <% end %>
        </div>
      <% end %>
    </div>
    <hr>
  <% end %>
</div>

